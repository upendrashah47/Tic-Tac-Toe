<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorResultBG">


    <!-- ============== Add Update Summary Insights ================== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCrown"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/winner" />

            <TextView
                android:id="@+id/txvPlayerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Player 1"
                android:textColor="#E6CC54"
                android:textSize="30dp"
                android:textStyle="bold" />
<!--E6CC54 AC8800  F7EBB0-->
            <TextView
                android:id="@+id/txvNewGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:text="Start New Game"
                android:textColor="@color/colorRight"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Home"
                android:textColor="@color/colorCross"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>